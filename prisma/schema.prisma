generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Repartidor {
  id        Int      @id @default(autoincrement())
  nombre    String
  telefono  String
  pedidos   Pedido[]

  @@map("repartidores")
}

model Pedido {
  id             Int      @id @default(autoincrement())
  fechaHora      DateTime
  nombreCliente  String
  direccion      String
  repartidorId   Int?
  repartidor     Repartidor? @relation(fields: [repartidorId], references: [id])
  pizzas         Pizza[] 
}

model Pizza {
  id      Int      @id @default(autoincrement())
  nombre  String
  precio  Float
  pedidos Pedido[] 
}
